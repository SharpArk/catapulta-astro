---

<LayoutFundadores title={`Catapulta - ${title}`}>
  <section class="p-52 flex flex-col gap-32">
    {
      data[title]?.map((e) => (
        <div class="flex justify-between items-center text-white gap-4">
          <div class="flex flex-col gap-4">
            <h1 class="text-2xl font-bold uppercase">{e.Title}</h1>
            <p class="text-xl w-[calc(100vw/2.5)] p-5 rounded-2xl bg-[#00000075]">
              {e.Desc}
            </p>
          </div>
          <img
            class="w-[400px] h-[400px] object-cover rounded-3xl"
            src={`/img/${e.image}`}
            alt=""
          />
        </div>
      ))
    }
  </section>
</LayoutFundadores>
